{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": ["npx", "nx", "run-many", "-t", "lint", "test", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc", "$eslint-compact", "$eslint-stylish"],
      "label": "nx: lint test build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
